@require '~@theme/styles/variables'

.container
  margin 0 1rem !important
  padding 0 1rem
  @media (min-width $MQWide)
    max-width ($MQWide / 2) + $MQNarrow
  @media (min-width $MQNarrow) and (max-width $MQWide - 1px)
    max-width $MQNarrow
  @media (max-width $MQMobile - 1px)
    padding 0 0.5rem

.main-div
  margin-top: 1rem
  padding 1.5rem
  background-color #ffffff
  border-radius 5px
  @media (max-width $MQMobile - 1px)
    padding 1rem
  &:not(:first-child)
    margin-top 1rem
  &:not(:last-child)
    margin-bottom 1rem
    @media (max-width $MQMobile - 1px)
      margin-bottom 0.5rem
  > :first-child
    margin-top 0

.clearfix
  &::after
    display block
    clear both
    content ''

.text-align-center
  text-align center
